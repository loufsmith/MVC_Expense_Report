@model IEnumerable<Cts.Mvc.ExpenseReport.Domain.Clients>

@{
    ViewBag.Title = "Clients";
}

<h2>Clients</h2>

<p>
    @*<li class="btn btn-default">@Html.ActionLink("Add Client", "Create")</li>*@
    <a href="@Url.Action("/Create")" role="button" class="btn btn-default">Add Client</a> 
</p>
<div class="row-fluid">
    <div class="span6">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th width="2%"></th>
                <th width="50%">Client
                </th>
                <th width="48%">ClientID
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.ClientsID })"><i class="icon-trash" title="Delete"></i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ClientsID })">@Html.DisplayFor(modelItem => item.Client)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientsID)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
