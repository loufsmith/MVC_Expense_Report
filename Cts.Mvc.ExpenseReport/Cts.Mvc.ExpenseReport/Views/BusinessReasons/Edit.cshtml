@model Cts.Mvc.ExpenseReport.Domain.BusinessReasons

@{
    ViewBag.Title = "Edit Business Reason";
}

<h2>Edit Business Reason</h2>

@using (Html.BeginForm()) {
    
    <div>
        @Html.Partial("_ValidationError")
    </div>

    <fieldset>
        <legend>BusinessReasons</legend>

        @Html.HiddenFor(model => model.BusinessReasonsID)
                
        <div>
            @Html.Partial("_BusinessReasonDetail")
        </div> 
        <div>
            @Html.Partial("_SaveCancel")
        </div>        
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
