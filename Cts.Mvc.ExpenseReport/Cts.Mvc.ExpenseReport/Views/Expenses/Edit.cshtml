@model Cts.Mvc.ExpenseReport.Domain.Expenses

@{
    ViewBag.Title = "Edit Expense";
}

<h2>Edit Expense</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Expenses</legend>

        @Html.HiddenFor(model => model.ExpensesID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ExpenseDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExpenseDate)
            @Html.ValidationMessageFor(model => model.ExpenseDate)
        </div>

        <p>
            <button type="submit" value="Save" class="btn btn-default">Save</button> 
            <button type="submit" value="Cancel" class="btn btn-default" ONCLICK="window.location.href='/Expenses/Index'">Cancel</button> 
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
