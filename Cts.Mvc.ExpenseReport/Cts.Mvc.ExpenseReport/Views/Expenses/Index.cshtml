@model IEnumerable<Cts.Mvc.ExpenseReport.Domain.Expenses>

@{
    ViewBag.Title = "Expenses";
}

<h2>Expenses</h2>

<p>
    @*<li class="btn btn-default">@Html.ActionLink("Add Expense", "Create")</li>*@
    <a href="@Url.Action("/Create")" role="button" class="btn btn-default">Add Expense</a>
</p>
<div class="row-fluid">
    <div class="span6">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th width="5%"></th>
                <th width="20%">Expense Date</th>
                <th width="10%">Expenses ID</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ExpensesID })"><i class="icon-pencil" title="Edit"></i></a>|
            <a href="@Url.Action("Details", new { id = item.ExpensesID })"><i class="icon-list-alt" title="Details"></i></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpenseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpensesID)
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.ExpensesID })"><i class="icon-trash" title="Delete"></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
