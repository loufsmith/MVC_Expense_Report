@model Cts.Mvc.ExpenseReport.Domain.Expenses

@{
    ViewBag.Title = "Add Expense";
}

<h2>Add Expense</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Expenses</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExpenseDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExpenseDate)
            @Html.ValidationMessageFor(model => model.ExpenseDate)
        </div>

        <p>
            <button type="submit" value="Create" class="btn btn-primary">Create</button> 
            <a href="@Url.Action("/Index")" role="button" class="btn btn-default">Cancel</a>
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
