@model IEnumerable<Cts.Mvc.ExpenseReport.Domain.ExpenseCategories>

@{
    ViewBag.Title = "Expense Categories";
}

<h2>Expense Categories</h2>

<p>
    @*<li class="btn btn-default">@Html.ActionLink("Add Expense Category", "Create")</li>*@
    <a href="@Url.Action("/Create")" role="button" class="btn btn-default">Add Expense Category</a>
</p>
<div class="row-fluid">
    <div class="span6">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th width="2%"></th>
                <th width="98%">
                    @Html.DisplayNameFor(model => model.Category)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.ExpenseCategoriesID })"><i class="icon-trash" title="Delete"></i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ExpenseCategoriesID })">@Html.DisplayFor(modelItem => item.Category)</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
