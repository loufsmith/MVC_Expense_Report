@model Cts.Mvc.ExpenseReport.Domain.Projects

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Project?</h3>
<fieldset>
    <legend>Projects</legend>

    <div class="row">
        <div class="span6 alert alert-error">
            <h4>@Html.DisplayFor(model => model.ProjectsID) - @Html.DisplayFor(model => model.Project)</h4>
        </div>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="row">
            <div class="span6 alert alert-warning">
                <ul>
                    <li>@ViewBag.ErrorMessage</li>
                </ul>                
            </div>
        </div>
    }

</fieldset>
<br />
@using (Html.BeginForm())
{
    <div>
        <p>
            <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("/Index")" role="button" class="btn btn-default">Cancel</a>
        </p>
    </div>
}
