@model Cts.Mvc.ExpenseReport.Domain.Entries


<div class="row">
    <div class="span12">
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.EmployeesID)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(p => p.EmployeesID, ViewBag.EmployeesList as SelectList, "Select Employee...")
                @Html.ValidationMessageFor(model => model.EmployeesID, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.DateIncurred)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.DateIncurred, "{0:MM/dd/yyyy}", new { @class = "datepicker", @readonly = "true", style = "width:100px" })
                @Html.ValidationMessageFor(model => model.DateIncurred, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.Billable)
            </div>
            <div class="editor-field">
                @Html.CheckBoxFor(model => model.Billable)
                @Html.ValidationMessageFor(model => model.ExpenseCategoriesID, "*")
            </div>
        </div>
    </div>
    <div class="span12">
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.ProjectsID)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(p => p.ProjectsID, ViewBag.ProjectsList as SelectList, "Select Project...")
                @Html.ValidationMessageFor(model => model.ProjectsID, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.ExpenseCategoriesID)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(e => e.ExpenseCategoriesID, ViewBag.ExpenseCategoryList as SelectList, "Select Category...")
                @Html.ValidationMessageFor(model => model.ExpenseCategoriesID, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.BusinessReasonsID)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(b => b.BusinessReasonsID, ViewBag.BusinessReasonList as SelectList, "Select Reason...")
                @Html.ValidationMessageFor(model => model.BusinessReasonsID, "*")
            </div>
        </div>
    </div>
    <div class="span12">
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.ExpenseID)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ExpenseID)
                @Html.ValidationMessageFor(model => model.ExpenseID, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.Vendor)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Vendor)
                @Html.ValidationMessageFor(model => model.Vendor, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.NumPeople)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NumPeople)
                @Html.ValidationMessageFor(model => model.NumPeople, "*")
            </div>
        </div>
    </div>
    <div class="span12">
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.Guests)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Guests)
                @Html.ValidationMessageFor(model => model.Guests, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.Affiliation)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Affiliation)
                @Html.ValidationMessageFor(model => model.Affiliation, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.Amount)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Amount, "{0:C}", new { @class = "amount", @Value = "0.00" })
                @Html.ValidationMessageFor(model => model.Amount, "*")
            </div>
        </div>
    </div>
    <div class="span12">
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.Miles)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Miles, new { @class = "miles", @Value = "0" })
                @Html.ValidationMessageFor(model => model.Miles, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.Mileage)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Mileage, "{0:C}", new { @class = "mileage", @Value = "0.00" })
                @Html.ValidationMessageFor(model => model.Miles, "*")
            </div>
        </div>
        <div class="span3">
            <div class="editor-label">
                @Html.LabelFor(model => model.Total)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Total, "{0:C}", new { @class = "total", @Value = "0.00" })
                @Html.ValidationMessageFor(model => model.Total, "*")
            </div>
        </div>
    </div>
</div>
